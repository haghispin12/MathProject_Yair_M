<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        tools:context=".MainActivity">

        <Button
            android:layout_width="wrap_content"
            android:background="@color/purple_500"
            android:text="rate"
            android:layout_gravity="center"
            android:layout_margin="10px"
            android:id="@+id/rateBtn"
            android:textColor="@color/white"
            android:layout_height="35sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:text="לוח הכפל"
                android:layout_weight="80"
                android:layout_margin="5dp"
                android:background="@color/purple_500"
                android:id="@+id/btnTimes"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="0dp"
                android:text="כפל עד 20"
                android:layout_weight="80"
                android:layout_margin="5dp"
                android:id="@+id/btnTimes20"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="0dp"
                android:text="אתגר"
                android:layout_weight="80"
                android:layout_margin="5dp"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/btnChallenge"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="5dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/numText"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="5dp"
                android:layout_height="70dp"
                android:text="X"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="5dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/numText1"
                />
            <EditText
                android:layout_width="match_parent"
                android:background="@android:color/holo_orange_light"
                android:layout_margin="5dp"
                android:layout_height="70dp"
                android:inputType="number"
                android:hint="תשובה"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/answerText"
                />
            <Button
                android:layout_width="match_parent"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:text="check"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_height="70dp"
                android:id="@+id/checkBtn"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E60C0C"
                android:padding="10sp"
                android:text="save"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/showUsers_btn"
                android:background="@color/purple_500"
                android:padding="10sp"
                android:text="show all usersr"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

